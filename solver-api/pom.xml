	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<version>${maven.pmd.plugin.version}</version>
			</plugin>
		</plugins>
	</reporting>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<version>${maven.pmd.plugin.version}</version>
			</plugin>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>${spring.boot.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
							<goal>build-info</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>pl.project13.maven</groupId>
				<artifactId>git-commit-id-plugin</artifactId>
				<version>2.2.4</version>
				<executions>
					<execution>
						<goals>
							<goal>revision</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<dotGitDirectory>${project.basedir}/.git</dotGitDirectory>
					<prefix>git</prefix>
					<verbose>true</verbose>
					<generateGitPropertiesFile>true</generateGitPropertiesFile>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>**/*IntegrationTest</exclude>
					</excludes>
				</configuration>
				<executions>
					<execution>
						<phase>integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<excludes>
								<exclude>none</exclude>
							</excludes>
							<includes>
								<include>**/*IntegrationTest</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>io.fabric8</groupId>
				<artifactId>docker-maven-plugin</artifactId>
				<version>${fabric8.docker.maven.plugin.version}</version>
				<configuration>
					<registry>${dockerhub.registry}</registry>
					<images>
						<image>
							<alias>config</alias>
							<name>configserver:${project.parent.version}</name>
							<run>
								<ports>
									<port>7715:7715</port>
								</ports>
								<env>
									<PORT>7715</PORT>
									<CONFIG_REPOSITORY>https://github.com/jtviegas/spring-microservices</CONFIG_REPOSITORY>
								</env>
								<wait>
									<log>Started Application in</log>
									<time>20000</time>
								</wait>
							</run>

						</image>
						<image>
							<alias>store</alias>
							<name>store-api:${project.parent.version}</name>
							<run>
								<dependsOn>
									<container>config</container>
								</dependsOn>
								<ports>
									<port>7700:7700</port>
									<port>7600:7600</port>
								</ports>
								<env>
									<PORT>7700</PORT>
									<DEBUG_PORT>7600</DEBUG_PORT>
									<CONFIG_URI>http://config:7715</CONFIG_URI>
								</env>
								<wait>
									<log>Started Boot in</log>
									<time>20000</time>
								</wait>
								<links>
									<link>config:config</link>
								</links>
							</run>

						</image>
						<image>
							<name>${project.artifactId}:${project.parent.version}</name>
							<alias>solver</alias>
							<build>
								<dockerFileDir>${project.basedir}</dockerFileDir>
							</build>
							<run>
								<dependsOn>
									<container>config</container>
									<container>store</container>
								</dependsOn>
								<links>
									<link>config:config</link>
									<link>store:store</link>
								</links>
								<ports>
									<port>7705:7705</port>
									<port>7605:7605</port>
								</ports>
								<env>
									<PORT>7705</PORT>
									<DEBUG_PORT>7605</DEBUG_PORT>
									<STORE_URI_HOST>store</STORE_URI_HOST>
									<STORE_URI_PORT>7700</STORE_URI_PORT>
									<STORE_URI_PATH>/store/task</STORE_URI_PATH>
									<BLOCKING_COEFFICIENT>0.1</BLOCKING_COEFFICIENT>
									<CONFIG_URI>http://config:7715</CONFIG_URI>
								</env>
								<wait>
									<log>Started Boot in</log>
									<time>20000</time>
								</wait>
							</run>
						</image>
					</images>
					<authConfig>
						<username>jtviegas</username>
						<password>${DOCKERHUB_PSWD}</password>
					</authConfig>
				</configuration>

				<executions>
					<execution>
						<id>start</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>stop</goal>
							<goal>build</goal>
							<goal>start</goal>
						</goals>
					</execution>
					<execution>
						<id>push</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>stop</goal>
							<goal>push</goal>
						</goals>
					</execution>
				</executions>

			</plugin>
		</plugins>
	</build>

</project>
