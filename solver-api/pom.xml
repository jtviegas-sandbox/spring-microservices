			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>org.aprestos.labs.spring.microservices</groupId>
			<artifactId>solver-k</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>org.aprestos.labs.spring.microservices</groupId>
			<artifactId>apiutils</artifactId>
			<version>${project.parent.version}</version>
		</dependency>

		<!-- ########## spring cloud stuff ########## -->
		<dependency>
			<groupId>org.springframework.cloud</groupId>
